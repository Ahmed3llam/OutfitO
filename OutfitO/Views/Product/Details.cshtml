@model OutfitO.Models.Product
<div id="modal-placeholder"></div>
<div class="card">
    
    <div class="details text-center">
        
        <h6 class="name">Name: @Model.Title</h6>
        <div>Description: @Model.Description</div>
        <div>Price: @Model.Price</div>
        <div>Stock: @Model.Stock</div>

        <div>Category Name: @Model.Category.Title</div>
       
        <a href="/Product/Index">
            <button type="button" class="btn btn-outline-primary">Back To All List</button>
        </a>

        @* <a href="/Product/Addcomment?productId=@Model.Id">
            <button type="button" class="btn btn-outline-primary">Add Comment</button>
        </a> *@
        <a onclick="ChangeImg(@Model.Id)" class="btn btn-primary">Add Comment</a>

        
    </div>
</div>
@Html.Partial("_AllCommentsPartial", Model.Comments)

<style>

    .card {
        cursor: pointer;
        transition: all 0.4s ease-in-out;
        box-shadow: 4px 7px 11px 1px rgba(0, 0, 0, 0.42);
        background: linear-gradient(to bottom right, #FFF7F1, #FFE4C9);
        display: block;
        margin: auto;
        width: 30%;
        height: 70%;
        padding: 20px
    }

    .card:hover {
        box-shadow: 4px 7px 11px 1px rgba(179, 178, 178, 0.42);
        transform: scale(1.05);
    }

    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .id {
        font-weight: bold;
    }



    .btn {
        border-radius: 20px;
        margin-top: 10px;
        border: 1px solid #FFBE98;
        background-color: transparent;
        color: #9B4444;
        transition: all 0.3s ease-in-out;
    }

    .btn:hover {
        background-color: #FFBE98;
        border: 1px solid #FFBE98;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function ChangeImg(id) {
        console.log("ChangeImg function called with ID:", id);
        $.ajax({
            url: "/Product/Addcomment?productId=" + id,
            success: function (result) {
                $("#modal-placeholder").html(result);
                $('#AddcommentModel').modal('show');
                console.log(result);
            }
        });
    }
</script>
