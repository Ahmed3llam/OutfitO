@* Strong Type Model *@
@model List<Product>
@{
    Layout = "_ProductLayout";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .product .product-img {
            display: flex;
            justify-content: center; /* Horizontally center the content */
            align-items: center; /* Vertically center the content */
            height: 200px; /* Set the height of the product image container */
            overflow: hidden; /* Hide overflowing content */
        }


            .product .product-img > img {
                max-width: 150px;
                max-height: 200px;
            }




        .tooltip-container {
            position: relative;
            display: inline-block;
        }

        .product-rating {
            z-index: 1;
        }

        .tooltip-container .tooltipp {
            visibility: hidden;
            width: 120px;
            background-color: black;
            color: white;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 7;
            bottom: 125%;
            left: 50%;
            margin-left: -60px;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .tooltip-container:hover .tooltipp {
            visibility: visible;
            opacity: 1;
        }

        .quick-view {
            background: none;
            border: none;
            cursor: pointer;
        }

            .quick-view .fa-eye {
                color: black;
            }

            .quick-view:hover .fa-eye {
                color: blue; /* Change color on hover if needed */
            }

        }
    </style>


</head>
<div class="section">
    <div class="container">
        <div id="aside" class="col-md-3">
            <div class="aside">
                <h3 class="aside-title">Categories</h3>
                <div class="checkbox-filter">
                    @foreach (var item in ViewBag.Category)
                    {
                        <div class="input-checkbox">
                            <input type="checkbox" id="category-@ViewBag.Category.IndexOf(item)" name="category-@ViewBag.Category.IndexOf(item)">
                            <label for="category-@ViewBag.Category.IndexOf(item)">
                                <span></span>
                                @item.Title
                            </label>
                        </div>
                    }
                    <a class="btn btn-outline-danger" onclick="Filter()">
                        Apply
                    </a>
                </div>

            </div>
        </div>

        <div id="FilteredProducts" @* style="display:flex;flex-direction:column" *@>
            @Html.Partial("_ProductStorePartial", Model)
        </div>
       
    </div>
</div>
<div class="row">
    <nav aria-label="Page navigation" class="my-5 d-flex justify-content-center" style="display: flex;flex-direction: row;justify-content: center;">
        <!-- Updated class here -->
        <ul class="store-pagination">
            @for (int i = 1; i <= Math.Ceiling((double)(int)ViewData["TotalItems"] / (int)ViewData["content"]); i++)
            {
                <li class="page-item @(i == (int)ViewData["Page"] ? "active" : "")">
                    <a class="page-link btn btn-secondary mx-1" onclick="pagination(@i)">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
    document.querySelectorAll('.delete-form').forEach(form => {
        form.addEventListener('submit', function (event) {
            event.preventDefault();


            Swal.fire({
                title: 'Are you sure?',
                text: 'Are you sure you want to delete this Course?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {

                    form.submit();

                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelled!',
                        'Course is safe :)',
                        'error'
                    );
                }
            });
        });
    });
</script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>

    var selectedCategories = [];
    function getCat(){

        selectedCategories = [];
        event.preventDefault();

        // var selectedCategories = [];

        $('input[type="checkbox"]').each(function () {
            if ($(this).is(':checked')) {
                var categoryName = $(this).siblings('label').text().trim();
                selectedCategories.push(categoryName);
            }
        });

        console.log(selectedCategories);
    }

    function Filter() {
        getCat();

        $.ajax({
            url: '/Product/Filter',
            method: 'POST',
            data: { Params: selectedCategories},
            success: function (result) {
                $("#FilteredProducts").html("");
                $("#FilteredProducts").html(result);

                console.log(result);
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }

    function pagination(pageNum) {
        getCat();

        $.ajax({
            url: '/Product/Filter',
            method: 'POST',
            data: { Params: selectedCategories, page: pageNum },
            success: function (result) {
               $("#FilteredProducts").html("");
                $("#FilteredProducts").html(result);

                console.log(result);
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }

</script>
