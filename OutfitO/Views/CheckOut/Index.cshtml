@using OutfitO.Models
@model List<OutfitO.Models.productTest>

<br />

<h2>CheckOut</h2>

<table class="table table-responsive table-light table-bordered" style="width:100%">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Quantity</th>
        <th>Product Image</th>
        <th>Product Description</th>
        <th>Product Total</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td><img src="@item.Img" alt="Product Image" style="width:100px;height:100px;" /></td>
            <td>@item.Description</td>
            <td>@(item.Price * item.Quantity)</td>

        </tr>
    }
</table>

<br />
<p>
    <a asp-action="CheckOut" asp-Controller="CheckOut" class="btn btn-primary">CheckOut</a>
</p>
